# Smart E-Arsip Production Environment
# Copy this to .env on production server and update values

APP_NAME="Smart E-Arsip"
NODE_ENV=production
APP_PORT=3006
APP_TIMEZONE=Asia/Jakarta

# IMPORTANT: Update these with your production URLs
APP_URL=https://api.smart-e-arsip.agribunker.id
FRONTEND_URLS=https://smart-e-arsip.agribunker.id

# Database - Update with production credentials
DATABASE_URL="mysql://earsip_user:your_secure_password@127.0.0.1:3306/db_smart_e_arsip?connection_limit=30&pool_timeout=5"

# Session Configuration
SESSION_DRIVER=cookie
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=.smart-e-arsip.agribunker.id

# JWT Secrets - MUST be different from development!
JWT_SECRET=CHANGE_THIS_TO_RANDOM_SECRET_IN_PRODUCTION
JWT_REFRESH_SECRET=CHANGE_THIS_TO_RANDOM_SECRET_IN_PRODUCTION
JWT_EXPIRATION=24d

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
CACHE_TTL=300

# Database credentials (for docker if needed)
DB_ROOT_PASSWORD=your_root_password
DB_USER=earsip_user
DB_PASSWORD=your_secure_password

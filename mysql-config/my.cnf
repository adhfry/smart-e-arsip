[mysqld]
# ================================
# BASIC SETTINGS
# ================================
user = mysql
default-storage-engine = InnoDB
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

# ================================
# INNODB SETTINGS (OPTIMIZED)
# ================================
# Buffer Pool - 70-80% dari RAM untuk dedicated MySQL
innodb_buffer_pool_size = 1G
innodb_buffer_pool_instances = 8

# Log Files - Untuk write performance
innodb_log_file_size = 256M
innodb_log_buffer_size = 16M
innodb_flush_log_at_trx_commit = 2  # 0=fastest, 1=safest, 2=balanced

# File per table untuk better management
innodb_file_per_table = 1

# Thread Concurrency
innodb_thread_concurrency = 0
innodb_read_io_threads = 4
innodb_write_io_threads = 4

# Flush method
innodb_flush_method = O_DIRECT

# ================================
# CONNECTION SETTINGS
# ================================
max_connections = 200
max_connect_errors = 100
connect_timeout = 10
wait_timeout = 300
interactive_timeout = 300

# Thread Cache
thread_cache_size = 50
thread_stack = 256K

# ================================
# CACHE SETTINGS
# ================================
# Query Cache (Deprecated in MySQL 8.0)
# Jika menggunakan MySQL 5.7, uncomment:
# query_cache_type = 1
# query_cache_size = 64M
# query_cache_limit = 2M

# Table Cache
table_open_cache = 4000
table_definition_cache = 2000

# ================================
# BUFFER SETTINGS
# ================================
key_buffer_size = 32M
sort_buffer_size = 2M
read_buffer_size = 2M
read_rnd_buffer_size = 4M
join_buffer_size = 2M

# ================================
# TEMP TABLE SETTINGS
# ================================
tmp_table_size = 64M
max_heap_table_size = 64M

# ================================
# NETWORK SETTINGS
# ================================
max_allowed_packet = 64M
net_buffer_length = 16K

# ================================
# BINARY LOGGING (for replication)
# ================================
# Uncomment if you need replication
# server-id = 1
# log_bin = /var/lib/mysql/mysql-bin
# binlog_format = ROW
# expire_logs_days = 7
# max_binlog_size = 100M

# ================================
# SLOW QUERY LOG
# ================================
slow_query_log = 1
slow_query_log_file = /var/log/mysql/mysql-slow.log
long_query_time = 2
log_queries_not_using_indexes = 1

# ================================
# ERROR LOG
# ================================
log_error = /var/log/mysql/error.log

# ================================
# GENERAL LOG (Disable in production)
# ================================
# general_log = 0
# general_log_file = /var/log/mysql/mysql-general.log

# ================================
# PERFORMANCE SCHEMA
# ================================
performance_schema = ON
performance_schema_max_table_instances = 500
performance_schema_max_table_handles = 2000

# ================================
# SECURITY
# ================================
# Skip symbolic links for security
symbolic-links = 0

# Disable local infile for security
local-infile = 0

# ================================
# REPLICATION SETTINGS
# ================================
# Uncomment for master-slave setup
# gtid_mode = ON
# enforce_gtid_consistency = ON

[mysql]
# Default character set
default-character-set = utf8mb4

[client]
# Default character set
default-character-set = utf8mb4
port = 3306
socket = /var/run/mysqld/mysqld.sock

# ================================
# DOCKER ENVIRONMENT VARIABLES
# ================================
# File ini berisi environment variables untuk Docker deployment
# Copy file ini ke .env sebelum menjalankan docker-compose

# ================================
# DATABASE CONFIGURATION
# ================================
DB_ROOT_PASSWORD=strong_root_password_change_this
DB_USER=app_user
DB_PASSWORD=strong_app_password_change_this

# ================================
# REDIS CONFIGURATION
# ================================
REDIS_PASSWORD=strong_redis_password_change_this

# ================================
# JWT SECRETS
# ================================
# Generate dengan: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_jwt_secret_min_32_characters_change_this_in_production
JWT_REFRESH_SECRET=your_refresh_secret_min_32_characters_change_this_in_production

# ================================
# APPLICATION
# ================================
NODE_ENV=production
APP_PORT=3000
FRONTEND_URLS=http://localhost:3002,https://yourdomain.com
